<%- model_class = Pedido -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cliente_id) %></dt>
      <dd><pre class="prettyprint"><%= @pedido.cliente_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:vendedor_id) %></dt>
      <dd><pre class="prettyprint"><%= @pedido.vendedor_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:numero) %></dt>
      <dd><pre class="prettyprint"><%= @pedido.numero %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:emissao) %></dt>
      <dd><pre class="prettyprint"><%= @pedido.emissao %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:entrega) %></dt>
      <dd><pre class="prettyprint"><%= @pedido.entrega %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:situacao) %></dt>
      <dd><pre class="prettyprint"><%= @pedido.situacao %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:observacoes) %></dt>
      <dd><pre class="prettyprint"><%= @pedido.observacoes %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pedidos_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pedido_path(@pedido), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pedido_path(@pedido),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>