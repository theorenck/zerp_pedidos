<%= form_for @pedido, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="col-md-10">
    <%= f.text_field :cliente_id, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :vendedor_id, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :numero, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :emissao, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :entrega, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <div class="form-group">
      <%= f.label :situacao, :class => 'control-label' %>
      <%= f.select(:situacao, Pedido.situacoes,{},{class: 'text_field form-control'} ) %>
    </div>
  </div>

  <div class="col-md-10">
    <%= f.text_field :observacoes, :class => 'text_field form-control' %>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  pedidos_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
