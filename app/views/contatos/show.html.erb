<%- model_class = Contato -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:descricao) %></dt>
      <dd><pre class="prettyprint"><%= @contato.descricao %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:informacao) %></dt>
      <dd><pre class="prettyprint"><%= @contato.informacao %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:observacoes) %></dt>
      <dd><pre class="prettyprint"><%= @contato.observacoes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:pessoa_id) %></dt>
      <dd><pre class="prettyprint"><%= @contato.pessoa_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contatos_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contato_path(@contato), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contato_path(@contato),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>