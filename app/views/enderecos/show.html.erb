<%- model_class = Endereco -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:bairro) %></dt>
      <dd><pre class="prettyprint"><%= @endereco.bairro %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cep) %></dt>
      <dd><pre class="prettyprint"><%= @endereco.cep %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cidade) %></dt>
      <dd><pre class="prettyprint"><%= @endereco.cidade %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:codigo_ibge) %></dt>
      <dd><pre class="prettyprint"><%= @endereco.codigo_ibge %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:complemento) %></dt>
      <dd><pre class="prettyprint"><%= @endereco.complemento %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:logradouro) %></dt>
      <dd><pre class="prettyprint"><%= @endereco.logradouro %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:numero) %></dt>
      <dd><pre class="prettyprint"><%= @endereco.numero %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:pais) %></dt>
      <dd><pre class="prettyprint"><%= @endereco.pais %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:uf) %></dt>
      <dd><pre class="prettyprint"><%= @endereco.uf %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:pessoa_id) %></dt>
      <dd><pre class="prettyprint"><%= @endereco.pessoa_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              enderecos_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_endereco_path(@endereco), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              endereco_path(@endereco),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>