<%- model_class = Vendedor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:percentual_comissao) %></dt>
      <dd><pre class="prettyprint"><%= @vendedor.percentual_comissao %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:situacao) %></dt>
      <dd><pre class="prettyprint"><%= @vendedor.situacao %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              vendedores_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vendedor_path(@vendedor), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vendedor_path(@vendedor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>