<%= form_for @vendedor, :html => { :class => 'form-horizontal' } do |f| %>

  <%= render @vendedor.pessoa %> 
  
  <div class="col-md-10">
    <%= f.text_field :percentual_comissao, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :situacao, :class => 'text_field form-control' %>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  vendedores_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
