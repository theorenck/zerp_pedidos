<%- model_class = UnidadeMedida -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:simbolo) %></dt>
      <dd><pre class="prettyprint"><%= @unidade_medida.simbolo %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:descricao) %></dt>
      <dd><pre class="prettyprint"><%= @unidade_medida.descricao %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              unidades_medida_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_unidade_medida_path(@unidade_medida), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              unidade_medida_path(@unidade_medida),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>