<%- model_class = Pessoa -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:type) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cpf_cnpj) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.cpf_cnpj %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:razao_social) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.razao_social %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nome_fantasia) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.nome_fantasia %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:inscricao_estadual) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.inscricao_estadual %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:inscricao_municipal) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.inscricao_municipal %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:suframa) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.suframa %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nome) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.nome %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:data_nascimento) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.data_nascimento %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:naturalidade) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.naturalidade %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rg_emissao) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.rg_emissao %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rg_numero) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.rg_numero %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:orgao) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.orgao %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sexo) %></dt>
      <dd><pre class="prettyprint"><%= @pessoa.sexo %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pessoas_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pessoa_path(@pessoa), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pessoa_path(@pessoa),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>