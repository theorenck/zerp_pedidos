<%= form_for @pessoa, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="col-md-10">
    <%= f.text_field :type, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :cpf_cnpj, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :razao_social, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :nome_fantasia, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :inscricao_estadual, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :inscricao_municipal, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :suframa, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :nome, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :data_nascimento, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :naturalidade, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :rg_emissao, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :rg_numero, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :orgao, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :sexo, :class => 'text_field form-control' %>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  pessoas_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
