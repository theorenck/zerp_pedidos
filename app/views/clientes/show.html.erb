<%- model_class = Cliente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:situacao) %></dt>
      <dd><pre class="prettyprint"><%= @cliente.situacao %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:observacoes) %></dt>
      <dd><pre class="prettyprint"><%= @cliente.observacoes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:pessoa_id) %></dt>
      <dd><pre class="prettyprint"><%= @cliente.pessoa_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              clientes_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cliente_path(@cliente), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cliente_path(@cliente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>