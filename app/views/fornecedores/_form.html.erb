<%= form_for @fornecedor, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="col-md-12">
   <% if @fornecedor.errors.any? %>
    <div class="alert alert-danger">
      <h2>Existem <%= pluralize(@fornecedor.errors.count, "erro") %> no formul√°rio:</h2>
      <ul>
      <% @fornecedor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
   <% end %>
  </div>

  <%= render @fornecedor.pessoa %> 

  <%= f.hidden_field :id %>
  <%= f.hidden_field :pessoa_id %>
  <div class="col-md-10">
    <%= f.text_field :situacao, :class => 'text_field form-control' %>
  </div>

  <div class="col-md-10">
    <%= f.text_field :observacoes, :class => 'text_field form-control' %>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  fornecedores_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
