<%- model_class = Produto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:codigo) %></dt>
      <dd><pre class="prettyprint"><%= @produto.codigo %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:codigo_barras) %></dt>
      <dd><pre class="prettyprint"><%= @produto.codigo_barras %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:descricao) %></dt>
      <dd><pre class="prettyprint"><%= @produto.descricao %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:preco_custo) %></dt>
      <dd><pre class="prettyprint"><%= @produto.preco_custo %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:preco_venda) %></dt>
      <dd><pre class="prettyprint"><%= @produto.preco_venda %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:situacao) %></dt>
      <dd><pre class="prettyprint"><%= @produto.situacao %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:observacoes) %></dt>
      <dd><pre class="prettyprint"><%= @produto.observacoes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tipo_produto_id) %></dt>
      <dd><pre class="prettyprint"><%= @produto.tipo_produto_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:marca_id) %></dt>
      <dd><pre class="prettyprint"><%= @produto.marca_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              produtos_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_produto_path(@produto), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              produto_path(@produto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>