<%- model_class = ItemPedido -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.table_name.humanize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:pedido_id) %></th>
      <th><%= model_class.human_attribute_name(:produto_id) %></th>
      <th><%= model_class.human_attribute_name(:quantidade) %></th>
      <th><%= model_class.human_attribute_name(:percentual_desconto) %></th>
      <th><%= model_class.human_attribute_name(:valor_decimal) %></th>
      <th><%= model_class.human_attribute_name(:valor_unitario) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @itens_pedido.each do |item_pedido| %>
      <tr>
        <td><%= item_pedido.id %></td>
          <td><%= item_pedido.pedido_id %></td>
          <td><%= item_pedido.produto_id %></td>
          <td><%= item_pedido.quantidade %></td>
          <td><%= item_pedido.percentual_desconto %></td>
          <td><%= item_pedido.valor_decimal %></td>
          <td><%= item_pedido.valor_unitario %></td>
        <td><%=l item_pedido.created_at, format: :long %></td>
        <td>
          <%= link_to item_pedido_path(item_pedido), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_item_pedido_path(item_pedido), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to item_pedido_path(item_pedido), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_item_pedido_path,
            :class => 'btn btn-primary' %>
