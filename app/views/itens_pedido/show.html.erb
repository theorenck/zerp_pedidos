<%- model_class = ItemPedido -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:pedido_id) %></dt>
      <dd><pre class="prettyprint"><%= @item_pedido.pedido_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:produto_id) %></dt>
      <dd><pre class="prettyprint"><%= @item_pedido.produto_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:quantidade) %></dt>
      <dd><pre class="prettyprint"><%= @item_pedido.quantidade %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:percentual_desconto) %></dt>
      <dd><pre class="prettyprint"><%= @item_pedido.percentual_desconto %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:valor_decimal) %></dt>
      <dd><pre class="prettyprint"><%= @item_pedido.valor_decimal %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:valor_unitario) %></dt>
      <dd><pre class="prettyprint"><%= @item_pedido.valor_unitario %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              itens_pedido_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_pedido_path(@item_pedido), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_pedido_path(@item_pedido),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>